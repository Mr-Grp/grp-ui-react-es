{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "module":"esnext",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/*",
  ],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/__tests__/*.*",
    "src/setupTests.js",
  ]
}
